@{
}

@using NAC_Aircraft_Checklist.Models.Entities;
@model NAC_Aircraft_Checklist.Models.Entities.Aircraft;


@{
    Aircraft OriginalAircraft = (Aircraft)ViewData["Aircraft"];
}
<div>

@{
        if (OriginalAircraft != null)
    {
        <h1>Update Aircraft Details</h1>
            <form action="/Aircraft/Update?id=@OriginalAircraft.Id">
                <input hidden asp-for="@OriginalAircraft.Id" name="id" />
            <br/>
            <label>Aircraft Reg</label>
                <input asp-for="@Model.Reg" value="@OriginalAircraft.Reg" type="text" required />
                <br />
                <label>Base Manager Email Address</label>
                <input asp-for="@Model.EmailAddress " value="@OriginalAircraft.EmailAddress" type="email" required />
                <br />
                <label>Aircraft Type</label>
                <input required asp-for="@Model.Type" value="@OriginalAircraft.Type" type="text" />
                <br />
                <label>Base</label>
                <input required asp-for="@Model.BaseOfOperations" value="@OriginalAircraft.BaseOfOperations" type="text" />
                <br />
                <button class="btn btn-primary" type="submit">Update</button>
        </form>
            <form action="/Aircraft/Delete?id=@OriginalAircraft.Id">
                <input hidden asp-for="@OriginalAircraft.Id" name="id" />
                <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    }
    }

</div>
