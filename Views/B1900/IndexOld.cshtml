                            itemNum++;
                        }
                    }

                }

            </tbody>

        </table>


        <table slot="table">
            <tbody>

                @{
                    var Manuals = ViewData["Manuals"] as Table<B1900ManualsMaster>;
                    if (Manuals != null)
                    {
                        <tr>
                            <th colspan="7">@Manuals.Header</th>
                        </tr>
                        <tr>
                            <th></th>
                            <th rowspan="1" colspan="3">Manual Ref Number</th>
