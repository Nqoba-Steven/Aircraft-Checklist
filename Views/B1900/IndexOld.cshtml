            <tr>
                <th colspan="7">Additional Items</th>
            </tr>
            <tr>
                <th>Item</th>
                <th rowspan="1">Date (if appl.)</th>
                <th rowspan="1"> Rev Status / QTY</th>
                <th rowspan="1">Comments</th>
            </tr>
