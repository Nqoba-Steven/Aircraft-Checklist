@model B1900Document;
@{


}
<style>


    table {
        width: 90%;
        border-collapse: collapse;
        margin-top: 24px;
        margin-bottom: 24px;
    }

    select {
        word-wrap: normal;
        text-align: center;
        width: 100%;
    }
    th, td {
        border: 1px solid black;
        padding: 4px;
    }

    td {
        text-align: left;
        font-size: 9pt;
    }

    th {
        text-align: center;
    }

    td {
        position: relative;
    }

    textarea {
        border: none;
        resize: none;
    }

    .colspan-3 {
        width: 100px;
    }

    .rowspan-2 {
        height: 25px;
    }

    .documentDetails {
        display: flex;
        flex-direction: column;
    }

    .documentDetailsRow {
        display: flex;
        flex-direction: row;
