@model NAC_Aircraft_Checklist.Models.Email.Recipients.EmailRecipientPayload;

<style>
    .hidden {
        display: none;
    }

    .visible {
        display: block;
    }
</style>
<h1>Create Email Recipient</h1>
@{
    if (Model.isEscalation)
    {
        <div>
            <h2>Planner</h2>
            <form action="/Email/Add">
                <input asp-for="@Model.isEscalation" type="hidden" />
                <input asp-for="@Model.isBaseManager" type="hidden" />
                <input asp-for="@Model.isPlanner" type="hidden" />
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label col-form-label-lg">Name</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.EscalationRecipient.Name" class="form-control form-control-lg" type="text" required />
                    </div>
                </div>
                <div class="form-group row">

                    <label class="col-sm-2 col-form-label col-form-label-lg">Email Address</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.EscalationRecipient.EmailAddress" class="form-control form-control-lg" type="email" required />
                    </div>
                </div>
                <div class="form-group row">

                    <label class="col-sm-2 col-form-label col-form-label-lg">Is Active</label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.EscalationRecipient.isActive" type="checkbox" />
                    </div>
                </div>
                <button class="btn btn-primary" type="submit">Create</button>
            </form>
        </div>
    }
}
